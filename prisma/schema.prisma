// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash String

  firstName String?
  lastName String?

  projects Project[]
  tags Tag[]
  @@map("users")
}

model Project {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String
  description String?

  userId Int
  user User @relation(fields: [userId], references:[id])

  works Work[]

  @@map("projects")
}

model Work {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String
  start DateTime
  end DateTime

  userId Int

  projectId Int
  project Project @relation(fields: [projectId], references:[id])

  @@map("works")
}

model Tag {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String

  userId Int
  user User @relation(fields: [userId], references:[id])

  @@map("tags")
}
